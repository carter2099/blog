<%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
<%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>

<div class="login">
  <%= form_with url: new_subscriber_path, method: :post do |form| %>
    <%= form.email_field :email, class: "login-input", required: true, autofocus: true, placeholder: "Enter your email address" %>
    <%= form.submit "Subscribe" %>
  <% end %>
</div>
