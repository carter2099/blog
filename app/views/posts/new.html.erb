<h2>Upload</h2>

<%= form_with url: "/posts/create", local: true, multipart: true do |f| %>
  <p>
    <%= file_field_tag :markdown_file, accept: ".md" %>
  </p>
  <p>
    <%= submit_tag "Upload" %>
  </p>
<% end %>

<% if flash.notice %>
  <p style="color: green;"><%= flash.notice %></p>
<% elsif flash.alert %>
  <p style="color: red;"><%= flash.alert %></p>
<% else %>
  <br />
<% end %>
